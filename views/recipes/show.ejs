<%- include('../partials/header.ejs') %>

<h3 class="flex flex-row justify-center text-3xl pb-7 font-Playfair">Recipe Details:</h3>
<div class="flex flex-row flex-wrap items-center justify-center category-card mx-60">
    <div class="recipe-card" style="width: 18rem;">
        <div class="flex justify-center">
            <img src="<%= recipe.strMealThumb %>" class="w-max max-w-m flex flex-row justify-center items-center" alt="<%= recipe.strMeal %>">
        </div>
        <div class="recipe-card-body">
            <h5 class="flex flex-row justify-center text-lg font-RobotoMono text-center">
                <%= recipe.strMeal %>
            </h5>
        </div>
    </div>
</div>

<h4 class="text-2xl font-Playfair font-bold ml-2">Instructions:</h4>
<p class="whitespace-pre-line self-start text-lg mx-7 font-Lato">
    <%= recipe.strInstructions %>
</p>

<%- include('../partials/footer.ejs') %>