<%- include('../partials/header.ejs') %>

<h3 class="flex flex-row justify-start text-3xl pt-2 pl-2 font-Playfair">
    <%= recipeList.name %>
</h3>

<ul>
    <% recipeList.recipes.forEach(function(recipe) { %>
    <li>
        <h5 class="text-2xl flex items-start justify-start ml-2 font-Lato">
            -<%= recipe.name %>
        </h5>
        <form
            action="/recipes/<%= recipeList.id %>/<%= recipe.id %>?_method=DELETE"
            method="POST"
        >
            <button
                type="submit"
                class="bg-red-600 rounded text-xl ml-5 mb-2.5 font-Lato"
            >
                DELETE
            </button>
        </form>
    </li>
    <% }); %>
</ul>

<% if(user) { %>
<form
    action="/recipes/<%= recipeList.id %>"
    method="POST"
    autocomplete="off"
    class="mt-2 ml-5 flex flex-col place-content-center"
    style="width: 18rem"
>
    <input
        type="text"
        name="name"
        class="enabled border-2 border-slate-500 caret-slate-200 focus:outline-none focus:border-sky-600 focus:ring-1 focus:ring-sky-600 rounded"
        placeholder="Input a recipe"
    />
    <button
        type="submit"
        class="mt-2 bg-gray-300 rounded underline text-sky-600 font-Lato"
    >
        Add Recipe
    </button>
    <a
        href="/recipe-lists/<%= recipeList.id %>/edit"
        class="mt-2 bg-gray-300 rounded underline text-sky-600 flex justify-center items-center font-Lato"
        >Edit</a
    >
</form>
<% } %> <%- include('../partials/footer.ejs') %>
