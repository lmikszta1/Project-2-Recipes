<%- include('../partials/header') %>

<h2 class="flex flex-row justify-center text-3xl pb-2 font-Playfair">Recipe Categories:</h2>
<div class=" flex justify-center">
    <div class="grid grid-flow-row grid-cols-2 auto-rows-max justify-center gap-2 mx-24" style="width: 20rem;">
        <% categories.forEach(function(category) { %>
            <div class="bg-slate-300 rounded hover:bg-slate-500 hover:text-white">
                <div>
                    <h5 class="text-2xl flex items-start justify-start font-Lato flex flex-row items-center justify-center">
                        <a href="/recipes/<%= category.strCategory %>" class="cursor-pointer"><%= category.strCategory %></a>
                    </h5>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('../partials/footer') %>